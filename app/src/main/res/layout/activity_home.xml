<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem vindo Sr(a)"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="50px"
        android:id="@+id/text-agendamento" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn-consultas"
        android:background="@drawable/consulta"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/text-agendamento"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:longClickable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn-extrato"
        android:background="@drawable/extrato"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/btn-consultas"
        android:layout_alignStart="@+id/btn-consultas" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn-historico"
        android:background="@drawable/historico"
        android:layout_below="@+id/btn-extrato"
        android:layout_alignStart="@+id/btn-extrato"
        android:layout_marginTop="34dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn-marcar"
        android:background="@drawable/marcar"
        android:layout_marginEnd="53dp"
        android:layout_alignTop="@+id/btn-consultas"
        android:layout_alignEnd="@+id/text-agendamento" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn-convenio"
        android:background="@drawable/convenio"
        android:layout_alignBottom="@+id/btn-extrato"
        android:layout_alignStart="@+id/btn-marcar" />

    <ImageButton
        android:id="@+id/btn-sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn-historico"
        android:layout_alignLeft="@+id/btn-convenio"
        android:layout_alignStart="@+id/btn-convenio"
        android:background="@drawable/sair" />

</RelativeLayout>
